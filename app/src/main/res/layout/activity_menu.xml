<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayoutid"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context="com.example.pawcio.greatbody.MenuActivity">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Poziom Treningu:"
    android:textSize="30dp"
    android:textColor="@color/Font1"
    android:textAlignment="center"
    android:textStyle="bold"/>

    <TextView
        android:id="@+id/actTrainingDay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="12"
        android:textColor="@color/Font1"
        android:textSize="40dp"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginTop="60dp"
        >

        <Button
            android:id="@+id/startButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="START"
            android:backgroundTint="@color/Font1"
            android:textColor="@color/background"
            android:onClick="onStartClicked"/>
        <Button
            android:backgroundTint="@color/Font1"
            android:textColor="@color/background"
            android:id="@+id/describeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OPIS ĆWICZEŃ"
            android:onClick="onDescribeBtnClicked"/>
        <Button
            android:backgroundTint="@color/Font1"
            android:textColor="@color/background"
            android:id="@+id/optionsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ZWIĘKSZ POZIOM"
            android:onClick="onOptionsBtnClicked"/>
        <Button
            android:backgroundTint="@color/Font1"
            android:textColor="@color/background"
            android:id="@+id/aboutButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="O APLIKACJI"
            android:onClick="onAboutClicked"/>

        <Button
            android:backgroundTint="@color/Font1"
            android:textColor="@color/background"
            android:id="@+id/exitButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WYJŚCIE"
            android:onClick="onExitClicked"/>

    </LinearLayout>

</LinearLayout>
